<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products">

    <TextView
        android:id="@+id/screenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="PRODUCTS"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appLogo"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="585dp" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="714dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_bgstyle"
        android:elevation="8dp"
        android:hint="Search"
        android:padding="20dp"
        android:layout_below="@+id/screenTitle"
        android:layout_centerHorizontal="true" />

    <GridView
        android:id="@+id/availableItems"
        android:numColumns="3"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="3in"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <GridView
        android:id="@+id/soldoutItems"
        android:numColumns="auto_fit"
        android:columnWidth="100dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/availableItems"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>