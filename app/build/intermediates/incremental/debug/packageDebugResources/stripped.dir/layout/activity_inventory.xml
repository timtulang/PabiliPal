<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory">

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="669dp"
        android:layout_marginRight="319dp"
        android:layout_marginBottom="1153dp"
        android:backgroundTint="#fff4fc"
        app:srcCompat="@drawable/arrow_left_solid" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="714dp"
        android:layout_height="67dp"
        android:layout_below="@id/screenTitle"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_bgstyle"
        android:elevation="10dp"
        android:padding="20dp" />

    <TextView
        android:id="@+id/screenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="INVENTORY"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appLogo"
        android:textSize="35sp"
        android:layout_marginTop="14dp"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="585dp" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="669dp"
        android:layout_marginRight="319dp"
        android:layout_marginBottom="1153dp"
        android:backgroundTint="#fff4fc"
        app:srcCompat="@drawable/arrow_left_solid" />

    <GridView
        android:id="@+id/availableItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchView"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:horizontalSpacing="20dp"
        android:numColumns="3"
        android:verticalSpacing="10dp" >

    </GridView>

</RelativeLayout>